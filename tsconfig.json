{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "lib": ["es2015", "es2016", "es2017", "es2018"]
  },
  "exclude": ["node_modules", "dist"]
}
